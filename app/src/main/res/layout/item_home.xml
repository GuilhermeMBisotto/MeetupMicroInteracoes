<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imageViewHome"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:clickable="false"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_blue_white_stoke"
        android:transitionName="sharedImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:clickable="false"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:translationZ="4dp"
        app:layout_constraintBottom_toTopOf="@id/textViewAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewHome"
        tools:text="Disney on Ice - Em Busca dos Sonhos" />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:clickable="false"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="Porto Alegre/RS"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:translationZ="4dp"
        app:layout_constraintBottom_toTopOf="@id/textViewPlace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewHome" />

    <TextView
        android:id="@+id/textViewPlace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:alpha="0.8"
        android:clickable="false"
        android:fontFamily="sans-serif-light"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="GinÃ¡sio Gigantinho"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:translationZ="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewHome" />

</androidx.constraintlayout.widget.ConstraintLayout>